<article id="{{ slug }}" class="block__word definition-content">
  <p class="definition-content__speech">{{ speech}}</p>
  <div class="definition-content__content">
    {{ content | safe }}
    {# <p>{{ alt_words }}</p> #}
    {%- if alt_words -%}
      <h2>Alt Words</h2>
      <ul class="list-semicolon">
        {% for word in alt_words %}
          <li>{{ word | linkIfExistsInCollection(collections.definedWords) | safe }}</li>
        {% endfor %}
      </ul>
    {% endif %}
    {%- if reading -%}
      <h2>Further Reading</h2>
      <ul class="list-semicolon">
        {% for link in reading %}
          <li>
            <a href="{{link.href}}">{{ link.text }}</a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>
</article>
